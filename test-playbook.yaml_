---
- hosts:
  - storage01
  vars_files:
    - /home/user/ansible-role-beegfs-nondestructive/test-vars.yaml

  roles:
  - role: ansible-role-beegfs-nondestructive 
    beegfs_enable:
      admon: false
      mgmt: true
      meta: true
      oss: true
      tuning: true
      client: true
    beegfs_oss:
    - dev: "/dev/mapper/rhel-keeps"
      port: 8003
    beegfs_mgmt_host: "storage01"
    beegfs_client:
    - path: "/srv/beegfs"
      port: 8004
    beegfs_fstype: "xfs"
    beegfs_force_format: false
    beegfs_interfaces: ["enp1s0"]
    beegfs_rdma: true
    beegfs_state: present
...
